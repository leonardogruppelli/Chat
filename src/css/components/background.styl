.background
  width 150%
  height 150%
  background-color rgba(82, 110, 251, 0.6)
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  z-index -1

  svg
    width 100%
    height 100%

    circle
      transform-origin 50% 50%
      animation background 150s ease infinite both